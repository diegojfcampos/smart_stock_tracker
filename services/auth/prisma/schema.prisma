// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  url      = env("DATABASE_AUTH_URL")
  provider = "mysql"
}

generator client {
  provider                      = "prisma-client-js"
  output                        = "./generated/client"
  experimentalShadowDatabaseUrl = "null://"
}

model User {
  id        String    @id @default(uuid())
  password  String?
  createdAt DateTime  @default(now())
  email     String    @unique
  updatedAt DateTime?
  role      Role      @default(USER)
  firebase  Boolean   @default(false)
  profile   Profile?
  wallet    Wallet?
}

model Profile {
  id           String    @id @default(uuid())
  firstName    String?
  createdAt    DateTime  @default(now())
  phoneNumber  String?
  birthday     DateTime?
  taxId        String?
  idCardNumber String?
  updatedAt    DateTime?
  user         User      @relation(fields: [userId], references: [id])
  userId       String    @unique
}

model Wallet {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  stockid      String
  stockname    String
  buyprice     Int?
  buytaxies    Int?
  buydate      DateTime?
  sellprice    Int?
  selltaxies   Int?
  selldate     DateTime?
  result       Int?
  declared     Boolean   @default(false)
  yeardeclared DateTime?
  status       Status    @default(ACTIVE)
  user         User      @relation(fields: [userId], references: [id])
  userId       String    @unique
  earnings     Earnings  @relation(fields: [earningsid], references: [id])
  earningsid   String    @unique
}

model Earnings {
  id          String  @id @default(uuid())
  stockname   String
  stockamount Int
  ratio       Int
  period      String
  Wallet      Wallet?
}

enum Status {
  ACTIVE
  SOLD
}

enum Role {
  USER
  PREMIUM
}
