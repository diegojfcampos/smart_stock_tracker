{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src", 
    "noEmitOnError": true
  },
  "include": [
    "src/**/*.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}
